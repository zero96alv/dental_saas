# ===========================================
# VARIABLES DE ENTORNO PARA DENTAL SAAS
# ===========================================

# ---- CONFIGURACIÓN BÁSICA DE DJANGO ----
DJANGO_SECRET_KEY=tu-clave-secreta-super-segura-aqui
DJANGO_SETTINGS_MODULE=dental_saas.settings
DEBUG=False

# ---- CONFIGURACIÓN DE HOSTS ----
# Para DigitalOcean App Platform
ALLOWED_HOSTS=.ondigitalocean.app,localhost,127.0.0.1
# Para dominio personalizado (cuando lo configures):
# ALLOWED_HOSTS=.tudominio.com,.ondigitalocean.app,localhost,127.0.0.1

# ---- BASE DE DATOS ----
# Para desarrollo local:
DB_NAME=dental_db
DB_USER=postgres
DB_PASSWORD=tu_password
DB_HOST=127.0.0.1
DB_PORT=5432

# Para DigitalOcean (se configura automáticamente):
# DATABASE_URL=postgresql://user:pass@host:port/dbname

# ---- CONFIGURACIÓN DE TENANTS ----
DEFAULT_TENANT_SCHEMA=public

# ---- EMAIL (OPCIONAL) ----
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_app_password

# ---- LOGGING ----
LOG_LEVEL=INFO

# ===========================================
# NOTAS PARA DIGITALOCEAN APP PLATFORM:
